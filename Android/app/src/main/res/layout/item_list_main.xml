<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/item_main"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="6dp"
                                    card_view:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/name_item_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:text="username"/>

            <TextView
                android:id="@+id/title_item_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_item_main"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:textSize="14sp"
                android:text="title"
                android:layout_toLeftOf="@+id/price_item_main"
                android:layout_alignLeft="@+id/name_item_main"
                android:textColor="@android:color/holo_blue_light"/>

            <TextView
                android:id="@+id/price_item_main"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="price"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_orange_dark"/>
        </RelativeLayout>

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/picture_item_main"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
